<!-- TabletStatusBarView extends FrameLayout -->
<com.android.systemui.statusbar.tablet.TabletStatusBarView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res/com.android.systemui"
    android:background="@drawable/system_bar_background" >

    <FrameLayout
        android:id="@+id/bar_contents_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom" >

        <RelativeLayout
            android:id="@+id/bar_contents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false" >

            <!-- notification icons & panel access -->

            <include
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginTop="1dp"
                layout="@layout/system_bar_notification_area" />

            <LinearLayout
                android:id="@+id/clock_center_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="6.0dip"
                android:paddingRight="6.0dip" >

                <com.android.systemui.statusbar.policy.Clock
                    android:id="@+id/clock_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:tag="@string/eos_statusbar_clock_center_tag"
                    android:textAppearance="@style/TextAppearance.SystemBar.Clock" />
            </LinearLayout>
<!-- navigation controls -->

            <LinearLayout
                android:id="@+id/navigationArea"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="horizontal" >

                <com.android.systemui.statusbar.policy.KeyButtonView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/accessibility_back"
                    android:src="@drawable/ic_sysbar_back"
                    systemui:glowBackground="@drawable/ic_sysbar_highlight"
                    systemui:glowScaleFactorHeight="0.75"
                    systemui:glowScaleFactorWidth="0.65"
                    systemui:keyCode="4"
                    systemui:keyIdentifier="0"
                    systemui:keyConfigUri="eos_systemui_softkey_back"
                    systemui:keyColorUri="eos_systemui_back_key_color"
                    systemui:keyGlowColorUri="eos_systemui_back_glow_color" />

                <com.android.systemui.statusbar.policy.KeyButtonView
                    android:id="@+id/home"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/accessibility_home"
                    android:src="@drawable/ic_sysbar_home"
                    systemui:glowBackground="@drawable/ic_sysbar_highlight"
                    systemui:glowScaleFactorHeight="0.75"
                    systemui:glowScaleFactorWidth="0.65"
                    systemui:keyCode="3"
                    systemui:keyIdentifier="1"
                    systemui:keyConfigUri="eos_systemui_softkey_home"
                    systemui:keyRepeat="false"
                    systemui:keyColorUri="eos_systemui_home_key_color"
                    systemui:keyGlowColorUri="eos_systemui_home_glow_color" />

                <com.android.systemui.statusbar.policy.KeyButtonView
                    android:id="@+id/recent_apps"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/accessibility_recent"
                    android:src="@drawable/ic_sysbar_recent"
                    systemui:glowBackground="@drawable/ic_sysbar_highlight"
                    systemui:glowScaleFactorHeight="0.75"
                    systemui:glowScaleFactorWidth="0.65"
                    systemui:keyIdentifier="2"
                    systemui:keyConfigUri="eos_systemui_softkey_recent"
                    systemui:keyColorUri="eos_systemui_recent_key_color"
                    systemui:keyGlowColorUri="eos_systemui_recent_glow_color" />

                <com.android.systemui.statusbar.policy.KeyButtonView
                    android:id="@+id/menu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/accessibility_menu"
                    android:src="@drawable/ic_sysbar_menu"
                    android:visibility="invisible"
                    systemui:glowBackground="@drawable/ic_sysbar_highlight"
                    systemui:glowScaleFactorHeight="0.45"
                    systemui:glowScaleFactorWidth="0.15"
                    systemui:keyCode="82"
                    systemui:keyIdentifier="3"
                    systemui:keyConfigUri="eos_systemui_softkey_menu"
                    systemui:keyColorUri="eos_systemui_menu_key_color"
                    systemui:keyGlowColorUri="eos_systemui_menu_glow_color" />
            </LinearLayout>

<!-- fake space bar zone -->

            <com.android.systemui.statusbar.policy.EventHole
                android:id="@+id/fake_space_bar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/clock_center"
                android:layout_toRightOf="@+id/navigationArea"
                android:paddingLeft="8dip"
                android:paddingRight="8dip"
                android:visibility="gone" />
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/bar_shadow_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom" >

        <!-- lights out shade -->

        <RelativeLayout
            android:id="@+id/bar_shadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF000000"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/dot0"
                android:layout_width="80dip"
                android:layout_height="48dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_sysbar_lights_out_dot_small" />

            <ImageView
                android:id="@+id/dot1"
                android:layout_width="80dip"
                android:layout_height="48dip"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/dot0"
                android:src="@drawable/ic_sysbar_lights_out_dot_large" />

            <ImageView
                android:id="@+id/dot2"
                android:layout_width="80dip"
                android:layout_height="48dip"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/dot1"
                android:src="@drawable/ic_sysbar_lights_out_dot_small" />

            <ImageView
                android:id="@+id/dot3"
                android:layout_width="80dip"
                android:layout_height="48dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_sysbar_lights_out_dot_small" />
        </RelativeLayout>
    </FrameLayout>

</com.android.systemui.statusbar.tablet.TabletStatusBarView>